<% @character.comments.each do |comment| %>
  <div class="col-md-12 card card-body bg-light justify-content-start pt-2 mb-2" id="comment-<%= comment.id %>">
    <div>
      <p><%= comment.description %></p>
      <span class="quiet"><small>Created:
                            <%= time_ago_in_words(comment.created_at) %> ago by
                            <%= comment.user.username %></small></span>

      <% if current_user && (current_user == @character.user || current_user == comment.user) %>
        <hr/>
        <div class="row ">
          <div class="col-md-3">
            <section id="edit-comment"><%= link_to 'Modify', edit_character_comment_path(@character, comment), remote: true, class:"btn-sm btn-warning" %></section>
          </div>
          <div class="col-md">
            <section><%= link_to 'Destroy', [@character, comment], method: :delete, data: { confirm: "Are you sure you want to delete comment?" }, remote: true, class:"btn-sm btn-danger delete" %></section>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
