<% if obj.errors.any? %>
  <div class="row pb-5">
    <div class="col-md-8 mx-auto">
      <div class="card bg-warning">
        <h2 class="card-title">
          <%= pluralize(obj.errors.count, "error") %>
          prohibited this <%= obj.class %> from being saved:
        </h2>
        <div class="card-text">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
