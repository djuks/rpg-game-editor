<%= render 'shared/errors', obj: @character %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@character, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="control-label col-md-1 d-flex align-items-end mx-auto ">
          <%= f.label :name %>
        </div>
        <div class="col-md-8 mx-auto">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of Character", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="control-label col-md-1 d-flex align-items-end mx-auto ">
          <%= f.label :description %>
        </div>
        <div class="col-md-8 mx-auto">
          <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Describe your character" %>
        </div>
      </div>
      <br>
      <h3>Add Abilities:</h3>
      <br>
      <table class='table mt-10'>
        <thead>
          <tr>
            <th>Ability</th>
            <th>Value</th>
            <th></th>
          </tr>
        </thead>
        <tbody class='fields'>
          <%= f.fields_for :abilities do |builder| %>
            <%= render 'ability', f: builder %>
          <% end %>
        </tbody>
      </table>
      <p class="pl-3"><%= link_to_add_row('Add Ability', f, :abilities, class: 'btn btn-primary') %></p>

      <hr/>
      <br>
      <div class="form-group row">
        <div class="control-label col-md-1 d-flex align-items-end mx-auto ">
          <%= f.label :image %>
        </div>
        <div class="col-md-8 mx-auto">
          <%= f.file_field :image %>
        </div>
      </div>

      <hr/ >
      <div class="form-group row">
        <div class="col-md-10 ">

          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
          <%= link_to "Cancel", characters_path, class: "btn btn-danger btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
