<h2 align="center">Edit <%= resource_name.to_s.humanize %></h2>
<hr/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="container ">
    <div class="col-md-6 center card card-body bg-light pb-2 pt-2 mx-auto ">
      <div class="form-group row">
        <%= f.label :username, class:"col-sm-3 col-form-label-lg" %>
        <div class="col-sm-8">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control"%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class:"col-sm-3 col-form-label-lg" %>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
        </div>
      </div>

      

      <div class="form-group row">
        <%= f.label :password, class:"col-sm-3 col-form-label-lg"%>

        <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control"%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class:"col-sm-3 col-form-label-sm"%>

        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :current_password, class:"col-sm-3 col-form-label-sm"%>

        <div class="col-sm-8">
          <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control"%>
        </div>
      </div>

      <div class="row mx-auto">
        <div class="col-sm-3">
          <%= f.submit "Update", class: "btn btn-success btn-lg" %>
        </div>
        <div class="col-sm-3">
          <%= button_to "Back", :back, class: "btn btn-warning btn-lg"%>
        </div>
        <div class="col-sm-3">
          <%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-lg"%>
        </div>
      </div>
    </div>
  </div>
<% end %>
